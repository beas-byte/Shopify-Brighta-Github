        color: inherit !important;
        text-decoration: none;
        cursor: default;
    }

    .brand-btn, .sec-btn, .column-button-on {
        transition: background-color 0.3s, color 0.3s;
    }

      .button-on .column-button-on{
        background-color: {{ section.settings.col_btn_color }};
        color:{{ section.settings.col_main_btn_color }};
      }

      .brand-btn, .column-button-on:hover{
         background-color: {{ section.settings.col_main_btn_color_hover }};
        color:{{ section.settings.col_main_btn_color }};
      }

    .brand-btn:hover, .column-button-on:hover {
        background-color: {{ section.settings.main_btn_color_hover }};
        color: {{ section.settings.btn_color }};
    }
    .sec-btn{
      background-color: {{ section.settings.sec_main_btn_color }};
        color: {{ section.settings.sec_btn_color }};
    }
    .sec-btn:hover {
        background-color: {{ section.settings.sec_main_btn_color_hover }};
        color: {{ section.settings.sec_btn_color }};
    }
    .brand-slider-btn .cust-butt, .column-button-on {
        padding: 15px 20px;
        border-radius: 7px;
        margin: 0 7px;
    }
      .section-block-{{ section.id }}.column-carousel-brighta .brands-grid .halo-row.text-center .halo-item h3.text.title.line-style {
        font-size: 30px !important;
        font-weight: 600;
    }
     .section-block-{{ section.id }}.column-carousel-brighta .halo-item h3.text.title {
            font-size: {{ section.settings.fontsize_text }}px !important;
            font-weight: {{ section.settings.font_weight_title }};
        }
     .section-block-{{ section.id }}.column-carousel-brighta .halo-item p.text {
            font-size: {{ section.settings.fontsize_text }}px !important;
            font-weight: {{ section.settings.font_weight_title }};
        }
    .section-block-{{ section.id }}.column-carousel-brighta .halo-item .description {
            font-size: {{ section.settings.fontsize_des }}px !important;
        }
    {%- if section.settings.enable_icons -%}
        .column-carousel-brighta.style_1 .halo-item .wrapper-image {
                margin-top: -50px !important;
        }
      .column-carousel-brighta .brands-grid .halo-row.text-left .halo-item .wrapper-image img {
        box-shadow: 0 0 25px rgba(0,0,0,0.2);
    }
    {%- endif -%}


    @media (min-width: 768px) and (max-width: 980px) {
      .column-carousel-brighta   .halo-row.column-2 .halo-item {
            width: calc(50% - {{ section.settings.item_distance }}px / 2);
        }

      .column-carousel-brighta   .halo-row.column-3 .halo-item {
            width: calc((50% - {{ section.settings.item_distance }}px / 2) - {{ section.settings.item_distance }});
        }

      .column-carousel-brighta   .halo-row.column-4 .halo-item {
            width: calc(50% - {{ section.settings.item_distance }}px);
        }

      .column-carousel-brighta   .halo-row.column-5 .halo-item {
            width: calc((50% - {{ section.settings.item_distance }}px) / 1.25);
        }

     .column-carousel-brighta    .halo-row.column-6 .halo-item {
            width: calc(50% - {{ section.settings.item_distance }}px);
        }
    }
    @media (max-width: 767px) {
      .column-carousel-brighta   .halo-row .halo-item {
            width: 100%;
            margin-right: 0;
            margin-bottom: 0;
        }

        .column-carousel-brighta .brands-grid .halo-row{
      gap:0px;
    }
    }

     @media screen and (max-width: 480px) {
            .section-block-{{ section.id }}.column-carousel-brighta.brand-slider .halo-item .text {
                font-size: {{ section.settings.fontsize_text_mb }}px !important;
            }
    }

