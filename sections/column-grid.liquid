{% if section.blocks.size > 0 %}
  {% if section.settings['section-id'] != blank %}<div id="{{ section.settings.section-id }}">{% endif %}
  <div
    class="column-carousel-brighta brand-slider section-block-{{section.id}}  border-{{ section.settings.display_brand_border }} {{ section.settings.brands_block_style }}"
    id="brands-{{section.id}}"
    {% if section.settings.brand_layout == 'slider' %}
      data-loader-script="{{ 'halo.slide-brand.js' | asset_url }}"
    {% endif %}
  >
    <div class="brands-block {% if section.settings.brand_layout == 'grid' %}brands-grid{% endif %}{% if section.settings.brands_block_style == 'style_2' %} brand_style_2{% elsif section.settings.brands_block_style == 'style_3' %} brand_style_3{% endif %}">
      <div class="{% if section.settings.container == 'fullwidth' %}container-full{% elsif section.settings.container == '1170' %}container-1170{% elsif section.settings.container == '1770' %}container-1770{% else %}container{% endif %}">
        {% if section.settings.brands_block_style == 'style_3' %}
          <div class="wrapper-content">
        {% endif %}

        {% if section.settings.brand_title != blank %}
          <div class="halo-block-header{% if section.settings.brand_des != blank %} has-des{% endif %}{% if section.settings.view_all != blank %} viewAll--{{ section.settings.view_all_align }}{% endif %}">
            <h3 class="title text-{{ section.settings.title_alignment }}">
              <span style="{{ section.settings.color_title }}">
                {{ section.settings.brand_title }}
              </span>
            </h3>
            {% if section.settings.brand_des != blank %}
              <div class="rte subtext-brand text-{{ section.settings.title_alignment }}">
                {{ section.settings.brand_des }}
              </div>
            {% endif %}
            {% if section.settings.view_all != blank %}
              <a
                class="view_all{% if section.settings.enable_border_view_all %} has-border{% endif %}"
                {% if section.settings.link_view_all == blank %}
                  role="link" aria-disabled="true"
                {% else %}
                  href="{{ section.settings.link_view_all }}"
                {% endif %}
                title="{{section.settings.view_all}}"
                style="
                  --font-weight-view-all-style: {{ section.settings.font_weight_view_all }};
                  --mg-bottom-view-style: {{ section.settings.mg_bottom_view | append: 'px' }};
                  --color-view-all-style: {{ section.settings.color_view_all }};
                  --color-view-all-icon-style: {{ section.settings.color_view_all_icon }};
                  --font-size-view-all-style: {{ section.settings.view_all_fs | append: 'px' }};
                "
              >
                {%- if section.settings.icon_view_all -%}
                  <span
                    class="icon-svg"
                    {% if section.settings.view_all_icon_side == 'right' %}
                      style="display: none;"
                    {% endif %}
                  >
                    {{ section.settings.icon_view_all }}
                  </span>
                {%- endif -%}
                {{ section.settings.view_all }}
                {%- if section.settings.icon_view_all -%}
                  <span
                    class="icon-svg"
                    {% if section.settings.view_all_icon_side == 'left' %}
                      style="display: none;"
                    {% endif %}
                  >
                    {{ section.settings.icon_view_all }}
                  </span>
                {%- endif -%}
              </a>
            {% endif %}
          </div>
        {% endif %}
        <div
          class="halo-row column-{{ section.settings.brand_rows }} text-{{ section.settings.title_align }} brands-slider halo-slider{% if section.settings.brand_rows_mb == '2' %} sm-column-2{% else %} sm-column-1{% endif %} md-column-3"
          {% if section.settings.brand_layout == 'slider' %}
            data-brands-slider
          {% endif %}
          data-rows="{{ section.settings.brand_rows }}"
          data-arrows="{{ section.settings.enable_arrows }}"
          data-dots="{{ section.settings.enable_dots }}"
          data-rows-mobile="{{ section.settings.brand_rows_mb }}"
          style="{% unless section.settings.brand_layout == 'grid' %} --row-distance-style: {{ section.settings.item_distance | prepend: '-' | append: 'px' }}; {% endunless %}"
        >
          {% for block in section.blocks %}
            <div
              class="halo-item item--{{ block.settings.box_shadow }} block-{{ block.id }} text-{{ block.settings.text_position }} fade-in"
              id="block-{{ block.id }}"
              style="background-color: {{ block.settings.col_bg }};"
            >
              <a
                class="wtf"
                title="{% if block.settings.title != blank %}{{ block.settings.title }}{% else %}{{ preview_img.alt | escape }}{% endif %}"
                {% if block.settings.link == blank %}
                  role="link" aria-disabled="true"
                {% else %}
                  href="{{ block.settings.link }}"
                {% endif %}
              >
              </a>
              {% if block.settings.image != blank %}
                {%- assign preview_img = block.settings.image -%}
                <div
                  class="wrapper-image {% if block.settings.enable_border %}has-border{% endif %}"
                  style="max-width: {{ block.settings.image.width }}px; margin: 0 auto;"
                >
                  <a
                    class="adaptive_height {% if section.settings.enable_hover_zoom_image %}image-zoom{% endif %}"
                    title="{% if block.settings.title != blank %}{{ block.settings.title }}{% else %}{{ preview_img.alt | escape }}{% endif %}"
                    {% if block.settings.link == blank %}
                      role="link" aria-disabled="true"
                    {% else %}
                      href="{{ block.settings.link }}"
                    {% endif %}
                    style="padding-top: {{ 1 | divided_by: preview_img.aspect_ratio | times: 100 }}%;"
                  >
                    <img {% render 'lazyload', preview_img: preview_img %}>
                    {% if settings.enable_lazyload %}<span class="data-lazy-loading"></span>{% endif %}
                  </a>
                </div>
              {% else %}
                <p
                  style="color:{{ block.settings.color_title }}"
                  title="{% if block.settings.title != blank %}{{ block.settings.title }}{% else %}Coming Soon{% endif %}"
                  {% if block.settings.link == blank %}
                    role="link" aria-disabled="true"
                  {% else %}
                    href="{{ block.settings.link }}"
                  {% endif %}
                >
                  {% if block.settings.title != blank %}
                    <!-- You can add content here if needed -->
                  {% endif %}
                </p>
              {% endif %}
              <div class="content-container">
                {% if block.settings.title != blank %}
                  {% if block.settings['line-style-on'] %}
                    <h3
                      style="color:{{ block.settings.color_text_col }}; margin-bottom:{{ block.settings.margin_bottom_title }}px"
                      class="block-text text title line-style"
                      {% if block.settings.link == blank %}
                        aria-disabled="true"
                      {% else %}
                        href="{{ block.settings.link }}"
                      {% endif %}
                    >
                      {{ block.settings.title }}
                    </h3>
                  {% else %}
                    <p
                      style="color:{{block.settings.color_des }}"
                      class="block-text text"
                      {% if block.settings.link == blank %}
                        aria-disabled="true"
                      {% else %}
                        href="{{ block.settings.link }}"
                      {% endif %}
                    >
                      {{ block.settings.title }}
                    </p>
                  {% endif %}
                {% endif %}

                {% if block.settings.description != blank %}
                  <p
                    style="color:{{ block.settings.color_des }}"
                    class="description"
                    {% if block.settings.link == blank %}
                      aria-disabled="true"
                    {% else %}
                      href="{{ block.settings.link }}"
                    {% endif %}
                  >
                    {{ block.settings.description }}
                  </p>
                {% endif %}

                {% if block.settings['link-button-on'] != blank %}
                  <div class="button-on">
                    <a
                      class="column-button-on"
                      href="{{ block.settings.link }}"
                      {% if block.settings['link-button-padding'] != blank %}
                        style="padding:{{block.settings.link-button-padding}};"
                      {% endif %}
                    >
                      {{- block.settings['link-button-text'] -}}
                    </a>
                    {% if block.settings['link-button-icon'] != blank -%}
                      <img src="https://cdn.shopify.com/s/files/1/0780/6091/2925/files/button-icon.svg?v=1714649143">
                    {%- endif %}
                  </div>
                {% endif %}
              </div>
            </div>
          {% endfor %}
        </div>

        {% if section.settings.btn_text != blank %}
          <div class="brand-slider-btn enable-{{ section.settings.second_butt }}">
            <a
              class="brand-btn cust-butt"
              {% if section.settings.btn_link == blank %}
                role="link" aria-disabled="true"
              {% else %}
                href="{{ section.settings.btn_link }}"
              {% endif %}
            >
              {{ section.settings.btn_text }}
            </a>
            {% if section.settings.second_butt %}
              <a
                class="sec-btn cust-butt"
                {% if section.settings.sec_btn_link == blank %}
                  role="link" aria-disabled="true"
                {% else %}
                  href="{{ section.settings.sec_btn_link }}"
                {% endif %}
              >
                {{ section.settings.sec_btn_text }}
              </a>
            {% endif %}
          </div>
        {% endif %}
      </div>
    </div>
  </div>
  {% if section.settings['section-id'] != blank %}</div>{% endif %}
  <style>
        {%- liquid
            assign brand_bg = section.settings.brand_bg
            assign brand_bg_gradient = section.settings.brand_bg_gradient
            assign brand_bg_image = section.settings.brand_bg_image

            assign color_arrow = section.settings.color_arrow
            assign arrow_background = section.settings.arrow_background
            assign arrow_background_gradient = section.settings.arrow_background_gradient
            assign arrow_border = section.settings.arrow_border
            assign color_arrow_hover = section.settings.color_arrow_hover
            assign arrow_background_hover = section.settings.arrow_background_hover
            assign arrow_background_gradient_hover = section.settings.arrow_background_gradient_hover
            assign arrow_border_hover = section.settings.arrow_border_hover

