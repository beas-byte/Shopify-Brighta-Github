        text-align: left !important;
    }
    .halo-item.text-center .title, .halo-item.text-center p {
        text-align: center !important;
    }
      .halo-item.text-right .title, .halo-item.text-right p {
        text-align: right !important;
    }
    .button-on{
      display:flex;
    }


