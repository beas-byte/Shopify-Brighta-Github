

<div id="{{ section.settings.cta_sec_id }}" class="custom-cta-wrapper" style="padding-top:{{ section.settings.padding_top }}px; padding-bottom:{{ section.settings.padding_bottom }}px;
   margin-top:{{ section.settings.margin_top }}px; margin-bottom:{{ section.settings.margin_bottom }}px;">
 <div class="{% if section.settings.fullwidths %} fullwidth {% else %} container {% endif %}">
    <div class="custom-cta">
      <div class="custom-cta-container">
      <div class="custom-cta-content fade-in">
        {% if section.settings.cta_img != blank %}
          <img src="{{ section.settings.cta_img | img_url:'master'}}">
        {% endif %}
         <h2 style=" margin-bottom:{{ section.settings.title_margin_bot }}px !important;"> {{ section.settings.cta_text_title }} </h2>
          {% if section.settings.cta_texts != blank %}
         <div style="font-size:{{ section.settings.cta_texts_font_size }}; color:{{ section.settings.cta_texts_color }} ;">{{ section.settings.cta_texts }}</div>
        {% endif %}
        
      {% if section.settings.cta_button_text != blank %}
  <a style="margin-top: {{ section.settings.btn_margin_top }}px !important;" class="cta-btn" href="{{ section.settings.cta_button_link }}">{{ section.settings.cta_button_text }}</a>
{% endif %}
  
      
      </div>
       
      <div class="custom-cta-bg">
        <img src="{{ section.settings.cta_bacground_image | img_url:'master'}}">
      </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Custom CTA Banner",
  "settings": [
    {
      "type": "text",
      "id": "cta_sec_id",
      "label": "Section Id"
    },
     {
        "type": "checkbox",
        "id": "fullwidths",
        "label": "Ful width section",
        "default": false
      },
    {
        "type": "range",
        "id": "margin_top",
        "min": 0,
        "max": 100,
        "step": 1,
        "unit": "px",
        "label": "Margin Top",
        "default": 0
      },
      {
        "type": "range",
        "id": "margin_bottom",
        "min": 0,
        "max": 100,
        "step": 1,
        "unit": "px",
        "label": "Margin Bottom",
        "default": 0
      },
    {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 1,
        "unit": "px",
        "label": "Padding Top",
        "default": 80
      },
      {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 1,
        "unit": "px",
        "label": "Padding Bottom",
        "default": 80
      },    
    {
      "id": "cta_bacground_image",
      "type": "image_picker",
      "label": "Background Image"
    },
     
    {
      "type": "text",
      "id": "cta_text_title",
      "label": "CTA Title",
      "default": "Blitz Systems gets the job done faster and easier"
    },
    {
      "type": "image_picker",
      "id": "cta_img",
      "label": "Add Image / iconabove title",
      "info" : "maximum height allowed is 50px"
    },
    {
        "type": "range",
        "id": "title_margin_bot",
        "min": 0,
        "max": 100,
        "step": 1,
        "unit": "px",
        "label": "Margin Bottom",
        "default": 20
      },
    {
      "type": "richtext",
      "id": "cta_texts",
      "label": "CTA Text"
    },
    {
        "type": "range",
        "id": "cta_texts_font_size",
        "min": 0,
        "max": 25,
        "step": 1,
        "unit": "px",
        "label": "Font Size",
        "default": 18
      },
      {
        "type": "color",
        "id": "cta_texts_color",
        "label": "Select color for texts",
        "default": "#141006"
      },
    {
      "type": "text",
      "id": "cta_button_text",
      "label": "Button Text",
      "default": "Enquire now"
    },
    {
      "type": "url",
      "id": "cta_button_link",
      "label": "Button Url"
    },
    {
        "type": "range",
        "id": "btn_margin_top",
        "min": 0,
        "max": 100,
        "step": 1,
        "unit": "px",
        "label": "Margin Top",
        "default": 25
      }
  ],
  "presets": [
    {
      "name": "Brighta Custom CTA",
      "category": "Custom"

    }
  ]

}
{% endschema %}
